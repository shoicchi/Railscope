<body>
	<div class="main">
		<div class="container-fluid">
			<div class="note-search">
				<h1>Serch Notes</h1>
				<%= search_form_for @search do |f| %>
					<%= f.search_field :title_or_overview_or_content_or_reviews_review_or_postscripts_postscript_cont, class:"note-search-form"%>
				<%= f.submit "検索" %>
				<% end %>
			</div>
			<div class="note-all">
			<% @notes.each do |note| %>
				<div class="note-one">
					<div class="note-type">
						<%= note.is_browsable_guest %>
						<% if note.view_point != 0 %><!--ポイントが必要なら表示、無料記事はdefault0が投稿時に入る-->
							<%= note.view_point %>ポイント
						<% end %>
					</div>
					<div class="note-title">
						<%= link_to note.title, note_path(note) %>
					</div>
					<div class="note-overview">
						<%= render_with_hashtags(note.overview) %>
					</div>
					<div class="note-contributor">
						by<%= link_to note.user.name, user_path(note.user.id) %>
					<span class="note-create-date">
						created_at<%= note.created_at.strftime("%Y-%m-%d %H:%M") %>
					</span>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</body>
