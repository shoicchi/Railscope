<body>
	<div>Note編集</div>
	<%= form_for(@note) do |f| %>

		<div>
		<label>閲覧設定</label>
		<%= f.radio_button :is_browsable_guest, :"無料記事" %> 無料記事
  		<%= f.radio_button :is_browsable_guest, :"有料会員限定記事" %> 有料会員限定記事
  	</div>

	<div>
		<label>閲覧ポイント設定</label><!-- 閲覧設定が1(無料記事)の場合は0が入るようにする -->
		<%= f.number_field :view_point %>
	</div>

	<div>
		<label>タイトル</label>
		<%= f.text_field :title %>
	</div>

	<dir>
		<label>概要</label>
		<%= f.text_field :overview %>
	</dir>


	<div id='editor'>
		<label>内容</label>
		<%= f.text_area :content, "v-model" => "input"%>
		<div v-html='input | marked'></div><!--markedを使用した状態でcontentをinput-->
	</div>



	<%= f.submit '投稿する' %>
	<% end %>

	<!-- リアルタイムプレビュー -->
<script type="text/javascript">
	window.onload = function() {
		new Vue({
			el: '#editor',<%#contentのtext_areaのid%>
			data: {
				input: '<%= j @note.content %>',<%#保持しているデータは@note.content%>
				},
			filters: {
				marked: marked,
				},
		});
	};
</script>


</body>

